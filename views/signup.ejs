<style>
    .signup-index-container {
        padding-top: 75px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 95vh;
        width: 95vw;
    }

    .signup-section {
        margin-top: 20px;
        border: 1px solid #ebedef;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 550px;
        width: 300px;
        padding: 20px;
        border-radius: 8px;
        background-color: #f6f8fa;
    }

    .signup-section label {
        color: #24292e;
    }

    .signup-section input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 10px 16px 10px 16px;
        margin: 8px 0;
        border: 1px solid #216e39;
        border-radius: 8px;
        cursor: pointer;
    }

    .signup-section input[type=submit]:hover {
        transition: 0.2s;
        background-color: #45a049;
    }

    .signup-section a {
        float: right;
        background-color: transparent;
        text-decoration: none;
        color: #0366d6;
    }

    .signup-section input:focus {
        outline: white !important;
        border: 1px solid #2188ff;
        box-shadow: 0 0 10px #79b8ff;
    }

    .signup-section input {
        font-size: 18px;
        width: 100%;
        padding: 8px 18px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-sizing: border-box;
    }

    .index-logo {
        height: auto;
        width: auto;
        display: flex;
        justify-content: center;
        flex-direction: row;
    }

    .index-logo img {
        height: 130px;
        width: 130px;
    }

</style>
<div class="signup-index-container">
    <div>
        <div class="index-logo">
            <img src="/assets/logo.png" />
        </div>
        <h1>Sign Up To DisPlicare</h1>
    </div>
    <div class="signup-section">
        <form class="signup-form">
            <label for="signup-index-fullname">Full Name</label>
            <input type="text" id="signup-index-fullname" name="signup-index-fullname" class="signup-index-fullname"><br><br>
            <label for="signup-index-username">Username</label>
            <input type="text" id="signup-index-username" name="signup-index-username" class="signup-index-username"><br><br>
            <label for="signup-index-email">Email Address</label>
            <input type="text" id="signup-index-email" name="signup-index-email" class="signup-index-email"><br><br>
            <label for="signup-index-password">Password</label>
            <input type="password" id="signup-index-password" name="signup-index-password" class="signup-index-password"><br><br>
            <label for="signup-index-confirm-password">Confirm Password</label>
            <input type="password" id="signup-index-confirm-password" name="signup-index-confirm-password" class="signup-index-confirm-password"><br><br>
            <input type="submit" value="Register" class="signup-index-submit" id="signup-index-submit">
        </form>
    </div>
</div>